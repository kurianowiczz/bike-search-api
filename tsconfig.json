{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "node_modules/express/lib/application.js"
  ],
  "exclude": [
    "./src/public/"
  ]
}
